<p id="notice"><%= notice %></p>

<p>
  <b>ID:</b>
  <%= @expediente.id %>
</p>
<p>
  <b>Numero expediente colegio:</b>
  <%= @expediente.numero_expediente_colegio %>
</p>

<p>
  <b>Final de obra:</b>
  <%= @expediente.final_de_obra %>
</p>

<p>
  <b>Profesionales:</b>
  <% @expediente.profesionals.each do |profesional| %>
    <br>
    <%= profesional.try(:person).try(:name) %>
    <%= link_to 'Detalles', xpedientes.profesional_path(profesional.person) %>
  <% end %>
</p>

<p>
  <b>Convenio:</b>
  <%= @expediente.convenio_id %>
</p>


<%= link_to 'Edit', xpedientes.edit_expediente_path(@expediente) %> |
<%= link_to 'Back', "/#{@expediente.type.pluralize.downcase}" %>

<h3>Pases</h3>
<%= link_to "Crear un nuevo pase", xpedientes.new_expediente_pase_path(@expediente) %>
<%= render :partial => "expedientes/pases/pases" %>
