<%= semantic_form_for(@profesional) do |form| %>

  <%#= error_message(@profesional) %>

  <%= form.inputs do %>
    <%= form.inputs :titulo, :matricula %>
    <p><%= link_to "Ingresar un nueva persona", personas.new_person_path %></p>
    <%= form.input :person_id,
      :input_html => {
        "data-pre" => @profesional.persons.to_json, :only => [:id, :name] } %>
  <% end %>
  <%= form.buttons %>
<% end %>

